<%- include('partials/header') %>

<div class="flex justify-center text-center min-h-screen bg-gradient-to-r from-blue-400 via-indigo-400 to-purple-400">
    <div class="mt-10 text-center bg-white bg-opacity-10 p-8 rounded-lg shadow-lg backdrop-blur-md w-full max-w-md h-fit">
        <div class="mb-6 bg-white p-2 rounded-md w-fit ml-40">
            <a href="/" class="text-gray-600 text-lg font-semibold hover:underline">HOME</a>
        </div>
        <!-- Content Section -->
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-white">Content</h2>
            <p class="text-gray-300 mt-2">Welcome to the latest news section. Stay updated with the most recent articles from Andhra Pradesh.</p>
        </div>

        <% if (news && news.articles && news.articles.length > 0) { %>
            <% news.articles.forEach(article => { %>
                <div class="mb-6">
                    <h2 class="text-xl font-semibold text-white underline"><a href="<%= article.url %>" target="_blank" class="hover:underline"><%= article.title %></a></h2>
                    <p class="text-gray-200 mt-2"><%= article.description %></p>
                    <div class="mt-2">
                        <img src="<%= article.urlToImage %>" alt="Article image" class="w-full h-64 object-cover mt-2 rounded-md">
                    </div>
                    <p class="text-gray-400 text-sm mt-2">Published on: <%= new Date(article.publishedAt).toLocaleDateString() %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-white">No news available at the moment.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
